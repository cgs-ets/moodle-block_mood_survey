{{!
    @template block_mood_survey/content

    Mood survey block content template.
}}

<div class="block_mood_survey-root" data-region="block_mood_survey-instance-{{instanceid}}">
  <div class="survey" data-region="block_mood_survey-instance-{{instanceid}}">
    <div id ="question" class="question" data-id="1" data-title="{{questiontitle}}">
        <h5 class="title">{{{questiontitle}}}</h5>
    	<div id="answersbody"class="answer">
    	  {{{questionbody}}}
    </div>
    <div class='mood-survey-details'>
        <a href="#" class="survey-more more-less">More...</i></a>
        <a href="#"  class ="why-ask" data-toggle="tooltip" data-placement="top"
        data-original-title="{{reason}}">Why are we asking this?</a>
        <a href="#" class="survey-opt-out"> Opt out</a>
    </div>
   </div>
</div>
{{#js}}
require(['jquery','theme_boost/tooltip'], function($){$('[data-toggle="tooltip"]').tooltip()});
{{/js}}


